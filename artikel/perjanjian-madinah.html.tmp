  <script>
// Lazy Load Gallery
document.addEventListener("DOMContentLoaded", function() {
  let lazyImages = [].slice.call(document.querySelectorAll(".galeri-item img"));
  if ("IntersectionObserver" in window) {
let lazyImageObserver = new IntersectionObserver(function(entries){
  entries.forEach(function(entry){
if (entry.isIntersecting) {
  let img = entry.target;
  img.src = img.dataset.src;
  lazyImageObserver.unobserve(img);
}
  });
});
lazyImages.forEach(function(img){lazyImageObserver.observe(img);});
  } else {
lazyImages.forEach(function(img){img.src = img.dataset.src;});
  }
});

// Lightbox
const galeriList = [
  {
src: "https://blogger.googleusercontent.com/img/b/R29vZ2xl/AVvXsEjq_LFY-Wuw5E1mxWJTil_lN04tITWx9OO8HkzkIqoirL1sEsVanoyyuQp1MSN9SP7Td6iDCY_4SPlb4iql_ULA-6OqRzLfoeFGBWaRtCg3SeO-NBK90MIDKE4IbEYe4c2HQRyo2w3bth9x5b9vHr6nrZxW7W2pGwmNVCaBkD9WI8Q6FvtPI7vuzCCYHV0/s1600/perjanjian-madinah.jpg",
