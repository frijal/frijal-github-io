    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const canonicalUrl = document.getElementById('canonical-link').href || window.location.href.split('#')[0];
            const pageTitle = document.title;
            const nowISO = new Date().toISOString();

            // --- 1. Populate URL & Date Fields ---
            const encodedUrl = encodeURIComponent(canonicalUrl);
            document.getElementById('current-url').textContent = canonicalUrl;
            document.getElementById('updated-at').textContent = new Date().toLocaleString('id-ID', {dateStyle:'medium', timeStyle:'short'});
            document.getElementById('og-url').setAttribute('content', canonicalUrl);
            
            const fbComments = document.getElementById('fb-comments');
            if (fbComments) fbComments.setAttribute('data-href', canonicalUrl);

            // --- 2. Share buttons behavior ---
            const shareText = encodeURIComponent("Baca tentang PT Badak NGL — lokasi & fakta singkat");
            document.getElementById('share-fb').href = `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`;
            document.getElementById('share-x').href = `https://twitter.com/intent/tweet?text=${pageTitle}&url=${encodedUrl}`;
            document.getElementById('share-wa').href = `https://api.whatsapp.com/send?text=${shareText}%20${encodedUrl}`;
            document.getElementById('share-tg').href = `https://t.me/share/url?url=${encodedUrl}&text=${shareText}`;

            // --- 3. Copy Link ---
            document.getElementById('btn-copy-link').addEventListener('click', async (e)=>{
                try{
                    await navigator.clipboard.writeText(canonicalUrl);
                    e.target.textContent = 'Tersalin ✓';
                    setTimeout(()=>{ e.target.textContent = 'Copy Link'; }, 2000);
                }
                catch(err){
                    prompt('Gagal menyalin. Salin manual:', canonicalUrl);
                }
            });

            // --- 4. JSON-LD Update ---
            // a. Update Article
            try{
                const ldArticleScript = document.getElementById('ld-article-template');
                const ld = JSON.parse(ldArticleScript.textContent);
                ld.mainEntityOfPage['@id'] = canonicalUrl;
                ld.dateModified = nowISO;
                ldArticleScript.textContent = JSON.stringify(ld, null, 2);
            }
            catch(e){ console.warn('Gagal mengisi JSON-LD Article otomatis', e); }

            // b. Update Breadcrumb
            try{
                const ldBreadcrumbScript = document.getElementById('ld-breadcrumb-template');
                const ld = JSON.parse(ldBreadcrumbScript.textContent);
                ld.itemListElement[2].item = canonicalUrl;
                ldBreadcrumbScript.textContent = JSON.stringify(ld, null, 2);
            }
            catch(e){ console.warn('Gagal mengisi JSON-LD Breadcrumb otomatis', e); }

            // c. Inject FAQPage
            const faqs = [];
            document.querySelectorAll('#faq details').forEach((d) => {
                const q = d.querySelector('summary')?.textContent || '';
                const a = d.querySelector('p')?.textContent || '';
                if (q && a) faqs.push({ "@type": "Question", "name": q, "acceptedAnswer": { "@type": "Answer", "text": a } });
            });

            if (faqs.length > 0) {
                const jsonldFAQ = { "@context": "https://schema.org", "@type": "FAQPage", "mainEntity": faqs };
                const script = document.createElement('script');
                script.type = 'application/ld+json';
                script.id = 'ld-faq';
                script.text = JSON.stringify(jsonldFAQ, null, 2);
                document.head.appendChild(script);
            }

            // Dihapus: Skrip deteksi Browser & OS dan IP (fungsi anonim terakhir)
            
            // Reload FB plugin
            if (typeof FB !== 'undefined') { FB.XFBML.parse(); }

        });
    </script>
